

<div class="container">
    <form action="/api/product" method="POST">
  <!-- 2 column grid layout with text inputs for the first and last names -->
  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <label class="form-label" for="form6Example1" >Name</label>
        <input type="text" id="form6Example1" class="form-control" name="name"/>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <label class="form-label" for="form6Example2">Picture</label>
        <input type="text" id="form6Example2" class="form-control" name="picture"/>
      </div>
    </div>
  </div>

  <!-- Text input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form6Example3">Price</label>
    <input type="number" id="form6Example3" class="form-control" name="price"/>
  </div>

  <!-- Text input -->
  <div class="form-outline mb-4">
    <label for="category">Category</label>
        <select class="form-control" id="category" name="category">
            
            <option>Computers</option>
            <option>Phones</option>
            <option>Accesories</option>
        </select>
  </div>

  <!-- Message input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form6Example7">Description</label>
    <textarea class="form-control" id="form6Example7" rows="4" name="description"></textarea>
  </div>

  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4" style="background-color:tomato; border-color: white;">GUARDAR</button>
</form>
</div>
